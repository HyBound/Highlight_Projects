@*@using InsuranceApp.ViewModels*@
@model List<User>

@{
	ViewBag.Title = "Admin";
}

	<div class="row no-gutters m-3">
		<div class="card col-sm-12 col-md-10 col-lg-12 mx-auto shadow">
			<div class="card-header text-center">
				<h5 class="m-0">Quotes</h5>
			</div>
			<div class="card-body">
				@foreach (var user in Model)
				{
					using (Html.BeginForm("Unsubscribe", "Admin", FormMethod.Post))
					{
						<input type="hidden" name="Id" value="@user.Id" />
						<div class="row mb-3">
							<div class="col text-center" placeholder="First Name">
								@user.FirstName
							</div>
							<div class="col text-center" placeholder="Last Name">
								@user.LastName
							</div>
							<div class="col-3 text-center" placeholder="Email Address">
								@user.EmailAddress
							</div>
							<div class="col text-center text-success" placeholder="Quote">
								$@user.Total
							</div>
							<br />
						</div>
					}
				}
			</div>
		</div>
	</div>

