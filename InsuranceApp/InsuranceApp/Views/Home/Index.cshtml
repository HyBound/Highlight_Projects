@*@using InsuranceApp.Models
@model List<User>*@

@{
	ViewBag.Title = "Get a quote!";
}

<div class="row no-gutters m-3">
	<div class="card center-block col-md-10 col-lg-6 mx-auto shadow">
		<div class="card-header text-center">
			<h1 class="m-0">Get an insurance quote!</h1>
		</div>
		<div class="card-body">
			@using (Html.BeginForm("YourQuote", "Home", FormMethod.Post))
			{
			<div class="row no-gutters">
				<div class="form-group col-mid-12 col-lg-12">
					<input name="FirstName" type="text" class="form-control" placeholder="First Name" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="LastName" type="text" class="form-control" placeholder="Last Name" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="CarMake" type="text" class="form-control" placeholder="Car Make" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="CarModel" type="text" class="form-control" placeholder="Car Model" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="CarYear" type="text" class="form-control" placeholder="Car Year" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="DOB" type="datetime" class="form-control" placeholder="Date of Birth (mm/dd/yyyy" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="DUI" type="text" class="form-control" placeholder="Had a DUI (True/False)" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="Tickets" type="number" class="form-control" placeholder="Number of Tickets" />
				</div>
				<div class="form-group col-mid-12 col-lg-12">
					<input name="CoverageType" type="text" class="form-control" placeholder="Full or Liability Coverage" />
				</div>
			</div>
				<button type="submit" class="btn btn-block btn-primary">Submit</button>
			}
		</div>
	</div>
</div>
